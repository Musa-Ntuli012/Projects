<Window x:Class="Simple_banking_app_concept.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forgot Password" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Forgot Password" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <TextBox Name="UsernameTextBox" Margin="0,0,0,10" />
            <Button Content="Reset Password" Click="ResetPasswordButton_Click" Background="#007ACC" Foreground="White" Padding="10"/>
            <TextBlock Name="MessageTextBlock" Foreground="Red" Margin="0,10,0,0" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>