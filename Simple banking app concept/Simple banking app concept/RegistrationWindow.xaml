<Window x:Class="Simple_banking_app_concept.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="400" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
            <TextBlock Text="Register" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <TextBlock Text="First Name" Foreground="Gray"/>
            <TextBox Name="FirstNameTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Last Name" Foreground="Gray"/>
            <TextBox Name="LastNameTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Address" Foreground="Gray"/>
            <TextBox Name="AddressTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Username" Foreground="Gray"/>
            <TextBox Name="UsernameTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Password" Foreground="Gray"/>
            <PasswordBox Name="PasswordBox" Margin="0,0,0,10"/>
            <Button Content="Upload ID Copy" Click="UploadIdButton_Click" Margin="0,0,0,10"/>
            <TextBlock Name="IdCopyPathTextBlock" Foreground="Gray" Margin="0,0,0,10"/>
            <Button Content="Register" Click="RegisterButton_Click"/>
            <TextBlock Name="RegistrationMessageTextBlock" Foreground="Red" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>