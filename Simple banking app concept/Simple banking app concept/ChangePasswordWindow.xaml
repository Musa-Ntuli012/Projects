<Window x:Class="Simple_banking_app_concept.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password" Height="300" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="Change Password" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <TextBlock Text="New Password" Foreground="Gray"/>
            <PasswordBox Name="NewPasswordBox" Margin="0,0,0,10"/>
            <Button Content="Change Password" Click="ChangePasswordButton_Click"/>
            <TextBlock Name="ChangePasswordMessageTextBlock" Foreground="Red" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>