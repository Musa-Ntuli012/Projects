<Window x:Class="Simple_banking_app_concept.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="400" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="Login" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <TextBlock Text="Username" Foreground="Gray"/>
            <TextBox Name="UsernameTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Password" Foreground="Gray"/>
            <PasswordBox Name="PasswordBox" Margin="0,0,0,10"/>
            <Button Content="Login" Click="LoginButton_Click"/>
            <TextBlock Name="LoginMessageTextBlock" Foreground="Red" TextAlignment="Center"/>
            <Button Content="Register" Click="OpenRegistrationWindow_Click" Margin="0,10,0,0"/>
            <Button Content="Forgot Password" Click="ForgotPasswordButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>